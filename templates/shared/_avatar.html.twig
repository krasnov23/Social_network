{% if profile and profile.image %}
    {# В твиге для объединение строк используется символ ~  #}
    <img src="{{ profiles ~ profile.image }}" alt="" class="inline-block h-{{size}} w-{{size}} rounded-full ring-2 ring-white dark:ring-gray-600">
{% else %}
    <div class="inline-block bg-gray-200 dark:bg-gray-700 rounded-full text-3xl h-{{size}} w-{{size}} ring-2 ring-white">

    </div>
{% endif %}