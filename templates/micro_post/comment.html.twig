{% extends 'base.html.twig' %}

{% block title %}Post - Add comment{% endblock %}

{% block bread %}
    -> <a href="{{ path('app_micro_post_show',{ post:post.id }) }}">Post</a> -> Comment
{% endblock %}

{% block body %}
    {{ include('micro_post/_post.html.twig', {post:post}) }}

    {{ form_start(forma,{'attr':{'novalidate':'novalidate'}}) }}
    <div>{{ form_errors(forma) }}</div>

    <div>
        {{ form_label(forma.text,'Please enter the comment',{'label_attr':{'class':'block text-sm text-gray-700 dark:text-gray-300'}})}}
        {{ form_widget(forma.text,{'attr':{'class':'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border'}})}}
        {{ form_errors(forma.text) }}
    </div>
    <div>
        <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Add comment</button>
    </div>
    {{ form_end(forma) }}
{% endblock %}